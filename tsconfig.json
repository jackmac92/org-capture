{
  "compilerOptions": {
    "lib": ["dom"],
    "plugins": [
      {
        "name": "typescript-deno-plugin",
        "enable": true,
        "importmap": "import_map.json"
      }
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["app.ts", "cli.ts"],
  "exclude": ["node_modules"]
}
